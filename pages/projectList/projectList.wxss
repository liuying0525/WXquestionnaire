/* pages/projectList/projectList.wxss */
page{
  background-color:rgb(240,244,246);
padding-top:6rpx;
}
.classify_page {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /*position: relative;*/
  background-color: #f4f5f7;
  margin-top:72rpx;
 
}

.classify_page_left {
 width:18%;

  /* height: 100%; */
  position: fixed;
  overflow-y: auto;
  background-color: rgb(240,244,246);
  z-index: 4;
 
}

.classify_page_right {
  width: 82%;
  height: 100%;
  background-color: white;
margin-left:18%;

}

/*template  css*/

.classify_recommendeds_right {
  /* background-color: #f4f5f7; */
  background-color:white;
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding:28rpx 20rpx;
  box-sizing: border-box;
 font-size:32rpx;
 align-items:flex-end;
 border-bottom:2rpx solid #f4f5f7;
padding-left:40rpx;
}
.classify_recommendeds_right text{
  margin:8rpx 0;
  color:#999;
}
.classify_recommendeds_right text:nth-of-type(1){
 color:rgb(46,46,46);
}
.recommendeds_right_left{
   display: flex;
  flex-flow: column;
}
.recommended_item_text {
  font-size: 25rpx;
  padding: 10rpx 0 10rpx 10rpx;
}

.recommended_item_content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  background-color: white;
  padding-left: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}



.recommended_item_content_cell image {
  width: 145rpx;
  height: 145rpx;
}

.recommended_item_content_cell_text {
  font-size: 25rpx;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}

.classify_recommendeds_left {
  height: 90rpx;
  width: 100%;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: rgb(240,244,246);
  border-left:8rpx solid rgb(240,244,246);
  color:rgb(188,188,189);
padding:10rpx 0;

}

/*其他（非一级）一级分类的二级分类*/

.classify_other_category {
  width: 100%;
  background-color: #f4f5f7;
  
}

.goodsCell_flex {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-left: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-right: 10rpx;
  background-color: white;
}


.classify_other_category_cell image {
  height: 145rpx;
  width: 145rpx;
}

.classify_other_category_cell_text {
  font-size: 25rpx;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}

.bigImage {
  width: 100%;
  height: 250rpx;
  display: flex;
}
.bigImage image {
  width: 100%;
  height: 250rpx;
  padding-left: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-right: 10rpx;
  background-color: white;
}

.active{
	background:white;
  border-left:8rpx solid blue;
  color:rgb(46,46,46);
 
}
.editicon{
width:35rpx;
height:35rpx;
padding-bottom:15rpx;
}

.searchlist{
  position:fixed;
  top:0;
 width:100%;
padding:10rpx;
left: 0;
z-index: 20;
height:80rpx;
line-height:60rpx;
background:rgb(240,244,246);
box-sizing:border-box;
text-align:center;

}
.searchlist input{
width:94%;
height:100%;
background:#fff;
border-radius:30rpx;
font-size:32rpx;
padding-left:10rpx;
margin:0 auto;


}
.searchlist icon{
  position:absolute;
right:80rpx;
top:10rpx;
z-index:20;
line-height:100rpx;
height:60rpx;
padding:0 20rpx;

}
